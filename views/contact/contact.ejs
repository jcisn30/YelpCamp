<% include ../partials/header %>

  <div class="row">
    <div class="input">
      <h1 class="text-center">Contact</h1>
      <form action="/contact/send" method="post" id="form">
        <div class="messages"> </div>
        <div class="controls">
          <div class="form-group">
            <label class="" for="form_name">Name</label>
            <input type="text" class="form-control" id="form_name" name="name" style="font-family:Arial, FontAwesome" placeholder="&#xf183; Enter Name" required="required" data-error="Your Name is Required" autofocus>
         </div>
          <div class="form-group">
            <label class="" for="form_phone">Phone</label>
            <input type="tel" class="form-control" id="form_phone" name="phone" style="font-family:Arial, FontAwesome" placeholder="&#xf095; Phone" required="required" data-error="Your Phone Number is Required">
          </div>
          <div class="form-group">
            <label class="" for="form_email">Email</label>
            <input type="email" class="form-control" id="form_email" name="email" style="font-family:Arial, FontAwesome" placeholder="&#xf1fa; Your Email Address" required="required" data-error="Your Email is Required">
          </div>
          <div class="form-group">
            <label class="" for="form_message">Message</label>
            <textarea class="form-control" id="form_message" name="message" style="font-family:Arial, FontAwesome" placeholder="&#xf044; Enter Message Here" rows="4" required="required" data-error="Please, leave us a message."></textarea>
          </div>
          <div class="form-group">
            <div id="captcha1" class="g-recaptcha form-group" data-sitekey="6LeJZT8UAAAAAK4rh2Z-KnVQlwT894SsUiJbJs_l"></div>
          </div>
          <div class="form-group">
            <button class="btn btn-lg btn-primary btn-block">Send Email</button>
          </div>
          <div  class="center" class="form-group">
                 <a href="/campgrounds">Go Back</a>
            </div>
      </form>
      
      </div>
    </div>

<% include ../partials/footer %>